<%
	min_li = 4 #最少的li數量
	max_li = 10 #最多的li數量
	min_width = 1 #最窄的選單寬度
	max_width = 6 #最寬的選單寬度

	li_length = (min_li..max_li).to_a.sample
	nav_width = (min_width..max_width).to_a.sample
	
	width = rand( li_length )

	inner = ["/erb/list-text_content-list", "/erb/list-text_content-file"]
%>

