	<% if header_text %>
		<div class="hd"><div class="in">
			<h3><span><a href="#"><%= header_text %></a></span></h3>
		</div></div>
	<% end %>
	<div class="ct"><div class="in"><ul data-index="1" data-child="<%= li_length %>"><% li_length.times do |i| %><li data-index="<%= i + 1 %>" data-width="<%= rand( li_length ) + 1 %>">

				<!-- <%= inner %> -->
					<%= render partial:  inner.sample, locals: set({}) %>
				<!-- <%= inner %> -->
				
				</li><% end %></ul></div></div>
</div></div>