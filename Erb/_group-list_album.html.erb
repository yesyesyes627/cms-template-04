<%
	min_li = 2 #最少的li數量
	max_li = 6 #最多的li數量

	li_length = (min_li..max_li).to_a.sample
%>

<div class="group-list album <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $list %>" data-child="<%= li_length %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
	<% if header_text %>
		<div class="hd"><div class="in">
			<h3><span><a href="#"><%= header_text %></a></span></h3>
		</div></div>
	<% end %>
	<div class="ct"><div class="in"><ul data-index="1" data-child="<%= li_length %>"><% li_length.times do |i| %><li data-index="<%= i + 1 %>"><%= render partial:  inner, locals: set({ index: 1, inner: "/erb/area-figure_album", inner_len: 2 }) %></li><% end %></ul></div></div>
</div></div>