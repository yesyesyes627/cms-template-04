<div class="group base-mobile" id="base-mobile" data-index="<%= index %>" data-type="<%= $row %>" data-child="2"><div class="in">
	<div class="ct"><div class="in">

	<!-- btn 按鈕 -->
		<%= render partial: "/erb/simple-text_btn", locals: set({ index: 1, func_set: "{'toggleBtn':{'bindNode':'.ct','targetNode':'.base-mobile','targetClass':'is-open'}}", header_text: "收合側欄" }) %>
	<!-- btn 結束 -->

	<!-- group-info 資訊群組 -->
		<div class="group info" data-index="2" data-type="<%= $row %>" data-child="2"><div class="in">
			<div class="ct"><div class="in">

			<!-- search 搜尋 -->
				<%= render partial: "/erb/area-form_search", locals: set({ index: 1, header_text: "搜尋" }) %>
			<!-- search 結束 -->

			<!-- share 分享 -->
				<%= render partial: "/erb/list-text_share", locals: set({ index: 2, header_text: "分享" }) %>
			<!-- share 結束 -->

			<!-- nav 選單 -->
				<%= render partial: "/erb/group-list_nav", locals: set({ index: 3, func_set: "{'majorNavMobile':{}}", header_text: "主選單", inner: "/erb/list-text_nav" }) %>
			<!-- nav 結束 -->

			<!-- hot-key-word 熱門關鍵字 -->
				<%= render partial: "/erb/list-text_hot-key-word", locals: set({ index: 4 }) %>
			<!-- hot-key-word 結束 -->

			<!-- link 連結 -->
				<%= render partial: "/erb/list-text_link", locals: set({ index: 5 }) %>
			<!-- link 結束 -->

			<!-- link 連結 -->
				<%= render partial: "/erb/list-text_link", locals: set({ index: 6 }) %>
			<!-- link 結束 -->

			</div></div>
		</div></div>
	<!-- group-info 結束 -->

	</div></div>
</div></div>