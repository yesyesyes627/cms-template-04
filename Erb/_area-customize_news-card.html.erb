<%
	min_li = 1 #最少的li數量
	max_li = 10 #最多的li數量

	li_length = (min_li..max_li).to_a.sample
%>

<div class="area-customize news-card <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
	<% if header_text %>
		<div class="hd"><div class="in">
			<h4><span><a href="#"><%= header_text %></a></span></h4>
		</div></div>
	<% end %>
	<div class="ct"><div class="in"><ul data-index="1" data-child="<%= li_length %>"><% li_length.times do |i| %>
				<% img = lorem_image('250x210') %>

				<li data-index="<%= i + 1 %>">
					<a class="div" href="#">
						<div class="label">
							<div class="mark"><%= lorem_date %></div>
							<div class="unit"><%= lorem_word %></div>
						</div>
						<div class="img">
							<span style="background-image: url('<%= img %>')"><img src="<%= img %>" alt=""></span>
						</div>
						<div class="caption"><%= zh_lorem_sentence %></div>
						<div class="p">
							<p><%= zh_lorem_paragraph %></p>
						</div>
					</a>
				</li><% end %></ul></div></div>
	<div class="ft"><div class="in"><ul data-index="1" data-child="1"><li data-index="1" class="more"><span><a href="#">更多</a></span></li></ul></div></div>
</div></div>